public class persona
{
    string nombre;
    string apellido;
    int numero_cliente;
    int cuenta_bancaria;

public persona(string lastName, string firstName,int num_cliene, int cuen_bancaria)
   {
      nombre = lastName;
      apellido = firstName;
      numero_cliente = num_cliene;
      cuenta_bancaria = cuen_bancaria;

   }
}

public class banco 
{
    int deposito;
    int transferencia;

    public banco(int dep, int transf)
   {
      deposito = dep;
      transferencia = transf;

   }

}

 static void persona (string[] args)
{
    /*string nombre = "pedro";
